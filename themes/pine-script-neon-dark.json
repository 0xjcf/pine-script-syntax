{
  "$schema": "vscode://schemas/color-theme",
  "name": "Pine Script Neon Dark",
  "colors": {
    "editor.background": "#0A0A0A",
    "editor.foreground": "#E0E0E0",
    "statusBar.background": "#0A0A0A",
    "statusBar.foreground": "#FF00FF",
    "statusBar.noFolderBackground": "#0A0A0A",
    "statusBar.debuggingBackground": "#0A0A0A"
  },
  "tokenColors": [
    // Control flow
    {
      "scope": "keyword.control.conditional.pine",
      "settings": { "foreground": "#FF00FF" }  // Neon pink
    },
    {
      "scope": "keyword.control.pine",
      "settings": { "foreground": "#FF00FF" }  // Neon pink
    },
    
    // Functions
    {
      "scope": "entity.name.function.pine",
      "settings": { "foreground": "#00FFFF" }  // Cyan
    },
    {
      "scope": "entity.name.function.declaration.pine",
      "settings": { "foreground": "#00FFFF" }  // Cyan
    },
    
    // Variables
    {
      "scope": "variable.declaration.pine",
      "settings": { "foreground": "#00FF00" }  // Neon green
    },
    {
      "scope": "support.variable.reassignment.pine",
      "settings": { "foreground": "#FFFF00" }  // Yellow
    },
    {
      "scope": "keyword.operator.assignment.pine",
      "settings": { "foreground": "#FFA500" }  // Orange
    },
    {
      "scope": "variable.language.pine",
      "settings": { "foreground": "#FF0000" }  // Bright red
    },
    
    // Types
    {
      "scope": "storage.type.pine",
      "settings": { "foreground": "#00FFFF" }  // Cyan
    },
    
    // Constants
    {
      "scope": "constant.language.pine",
      "settings": { "foreground": "#FF00FF" }  // Neon pink
    },
    {
      "scope": "constant.numeric.pine",
      "settings": { "foreground": "#00FFFF" }  // Cyan
    },
    
    // Operators
    {
      "scope": [
        "keyword.operator.comparison.pine",
        "keyword.operator.ternary.pine",
        "keyword.operator.arithmetic.pine"
      ],
      "settings": { "foreground": "#FFA500" }  // Orange
    },
    {
      "scope": "keyword.operator.arrow.pine",
      "settings": { "foreground": "#FFA500" }  // Orange
    },
    
    // Strings
    {
      "scope": "string.quoted.double.pine",
      "settings": { "foreground": "#ADFF2F" }  // Lime green
    },
    
    // Comments
    {
      "scope": "comment.line.pine",
      "settings": { "foreground": "#8A2BE2" }  // Purple
    },
    
    // Built-in functions
    {
      "scope": "support.function.pine",
      "settings": { "foreground": "#00FFFF" }  // Cyan
    },
    
    // Parameters
    {
      "scope": "entity.name.tag.pine",
      "settings": { "foreground": "#FFFF00" }  // Yellow
    },
    {
      "scope": "constant.other.pine",
      "settings": { "foreground": "#FF00FF" }  // Neon pink
    },
    {
      "scope": "storage.modifier.pine",
      "settings": { "foreground": "#FF00FF" }  // Neon pink
    },
    {
      "scope": "entity.name.tag.argument.pine",
      "settings": { "foreground": "#FFFF00" }  // Yellow
    }
  ]
} 