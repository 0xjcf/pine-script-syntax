{
  "$schema": "vscode://schemas/color-theme",
  "name": "Pine Script Syntax Theme (Dark)",
  "colors": {
    "editor.background": "#1E1E1E",
    "editor.foreground": "#F5F5F5",
    "statusBar.background": "#1E1E1E",
    "statusBar.foreground": "#F5F5F5",
    "statusBar.noFolderBackground": "#1E1E1E",
    "statusBar.debuggingBackground": "#1E1E1E"
  },
  "tokenColors": [
    // Control flow
    {
      "scope": ["keyword.control.pine", "keyword.control.conditional.pine"],
      "settings": { "foreground": "#FF80FF" }  // Pink (accessible)
    },
    
    // Functions
    {
      "scope": ["entity.name.function.pine", "entity.name.function.declaration.pine"],
      "settings": { "foreground": "#00BFFF" }  // Deep sky blue
    },
    
    // Variables
    {
      "scope": "variable.declaration.pine",
      "settings": { "foreground": "#00FF80" }  // Teal-green
    },
    {
      "scope": "support.variable.reassignment.pine",
      "settings": { "foreground": "#FFD700" }  // Gold
    },
    {
      "scope": "keyword.operator.assignment.pine",
      "settings": { "foreground": "#C586C0" }  // White
    },
    {
      "scope": "variable.language.pine",
      "settings": { "foreground": "#FF4040" }  // Coral red
    },
    
    // Types
    {
      "scope": "storage.type.pine",
      "settings": { "foreground": "#4EC9B0" }  // Teal
    },
    
    // Constants
    {
      "scope": "constant.language.pine",
      "settings": { "foreground": "#FF80FF" }  // Pink
    },
    {
      "scope": "constant.numeric.pine",
      "settings": { "foreground": "#79C0FF" }  // Light blue
    },
    
    // Operators
    {
      "scope": [
        "keyword.operator.comparison.pine",
        "keyword.operator.ternary.pine",
        "keyword.operator.arithmetic.pine"
      ],
      "settings": { "foreground": "#C586C0" }  // White
    },
    {
      "scope": "keyword.operator.arrow.pine",
      "settings": { "foreground": "#C586C0" }  // White
    },
    
    // Strings
    {
      "scope": "string.quoted.double.pine",
      "settings": { "foreground": "#7FFF00" }  // Chartreuse
    },
    
    // Comments
    {
      "scope": "comment.line.pine",
      "settings": { "foreground": "#6A9955" }  // Green
    },
    
    // Built-in functions
    {
      "scope": "support.function.pine",
      "settings": { "foreground": "#00BFFF" }  // Deep sky blue
    },
    
    // Parameters
    {
      "scope": "entity.name.tag.pine",
      "settings": { "foreground": "#E5C07B" }  // Yellow
    },
    {
      "scope": "constant.other.pine",
      "settings": { "foreground": "#4EC9B0" }  // Teal
    },
    {
      "scope": "storage.modifier.pine",
      "settings": { "foreground": "#FF80FF" }  // Pink
    },
    {
      "scope": "entity.name.tag.argument.pine",
      "settings": { "foreground": "#E5C07B" }  // Yellow
    }
  ]
}